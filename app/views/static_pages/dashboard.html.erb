<div class="container pt-4">
  <h1 class="header">Dashboard</h1>

  <section>
    <div class="card -entry p-3">
      <h2 class="section-header">Entries</h2>
      <div class="d-flex flex-wrap">
        <% @entries.last(8).reverse.each_with_index do |entry, index| %>
          <div class="entry-main col-sm-5 pb-4">
            <div><%= entry.title %></div>
            <div><%= entry.created_at.strftime("%A %B %d, %Y") %></div>
            <div><%= entry.content %></div>
          </div>
          <div class="d-flex align-items-center col-sm-1">
            <% if (index + 1) % 2 != 0 %>
              <div class="vertical-divider"></div>
            <% end %>
          </div>
        <% end %>
      </div>
    <div class="d-flex justify-content-center">
      <%= link_to 'New entry', new_entry_path, class: 'btn -medium-blue' %>
    </div>
        </div>  

  </section>

</div>
